{
    "include": ["src/**/*", "plugins"],
    "exclude": ["**/node_modules", "**/__tests__/"],
    "compilerOptions": {
        "baseUrl": "",
        "paths": {
            "@server": ["./src/server/"],
            "@server/*": ["./src/server/*"],
            "@client": ["./src/client/"],
            "@client/*": ["./src/client/*"],
            "@/*": ["./*"]
        },
        "outDir": "build",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "lib": ["es2017"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "removeComments": true,
        "pretty": true
    },
}
